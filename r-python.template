ARG BASE_IMAGE=spark:{{ SPARK_VERSION }}-scala{{ SCALA_VERSION }}-java{{ JAVA_VERSION }}-ubuntu
FROM $BASE_IMAGE

RUN set -ex && \
    apt-get update && \
    {%- if HAVE_PY %}
    apt install -y python3 python3-pip && \
    {%- endif %}
    {%- if HAVE_R %}
    apt install -y r-base r-base-dev && \
    {%- endif %}
    rm -rf /var/cache/apt/* && \
    rm -rf /var/lib/apt/lists/*
{%- if HAVE_R %}

ENV R_HOME /usr/lib/R
{%- endif %}
